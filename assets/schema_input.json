{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/kherronism/rewarewaannotation/master/assets/schema_input.json",
    "title": "kherronism/rewarewaannotation pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample_id": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "data_type": {
                "type": "string",
                "errorMessage": "Type of data must be provided and be one of 'RNAseq', 'Assembly', 'Protein evidence'",
                "enum": ["RNAseq", "Assembly", "Protein evidence"]
            },
            "file_1": {
                "type": "string",
                "errorMessage": "FastQ file for reads 1 must be provided, cannot contain spaces and must have extension '.fq.gz' or '.fastq.gz'",
                "anyOf": [
                    {
                        "properties": {
                            "data_type": {
                                "const": "RNAseq"
                            }
                        },
                        "pattern": "^\\S+\\.f(ast)?q\\.gz$"
                    },
                    {
                        "properties": {
                            "data_type": {
                                "enum": ["Assembly", "Protein evidence"]
                            }
                        },
                        "pattern": "^\\S+\\.(fa(st)?|fna|fasta)$"
                    }
                ]
            },
            "file_2": {
                "errorMessage": "FastQ file for reads 2 cannot contain spaces and must have extension '.fq.gz' or '.fastq.gz'",
                "anyOf": [
                    {
                        "type": "string",
                        "pattern": "^\\S+\\.f(ast)?q\\.gz$"
                    },
                    {
                        "type": "string",
                        "maxLength": 0
                    }
                ],
                "dependentRequired": [
                    "file_1"
                ],
                "dependentSchemas": {
                    "data_type": {
                        "const": "RNAseq"
                    }
                }
            }
        },
        "required": ["sample_id", "data_type", "file_1"]
    }
}
